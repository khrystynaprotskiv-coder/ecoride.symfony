{% extends 'layout.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
<div class="body">
    <div class="main">

    <div class="container">
        <h1 class="titel-contact">Connexion</h1>
        <div class="form-items">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div>
                        Vous vous etez deja connect√© {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
                    </div>
                {% endif %}

                    <div class="form-item">
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="form-item">
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    </div>
                            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <input type="checkbox" name="_remember_me" id="_remember_me">
                                    <label for="_remember_me">Remember me</label>
                                </div>
                            #}
                    <div class="form-item">
                        <button class="form-conf" type="submit">Connecter</button>
                    </div>

                    <div class="form-item">
                        <p class="qsq">Vous n'avez pas de compte?</p>
                        <a class="btn-insc" href="{{ path('app_register')}}">Inscrire</a>    
                    </div>

                </div>   
            </form>
        </div>
    </div>
</div>
{% endblock %}
